<Window x:Class="WpfPart.PopUpSaved"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPart"
        mc:Ignorable="d"
        Title="PopUpSaved" WindowStartupLocation="CenterScreen" Height="150" Width="200">
    <Grid Background="LightGoldenrodYellow">
        <TextBlock Text="Your new Settings are saved! " HorizontalAlignment="Center" Margin="10"> </TextBlock>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0,20" Padding="15,0,15,0" Click="btnOk_Click"></Button>
    </Grid>
</Window>
